{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": false,
    "outDir": "../../dist/apps/main",
    "paths": {
      "~configs/*": [
        "./configs/*"
      ],
      "~constants/*": [
        "./constants/*"
      ],
      "~entities/*": [
        "./entities/*"
      ],
      "~decorators/*": [
        "./decorators/*"
      ],
      "~subscribers/*": [
        "./subscribers/*"
      ],
      "~interceptors/*": [
        "./interceptors/*"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"],
}
